@model SignUpViewModel

@{
    Layout = "_Layout_Forms";
    ViewData["Title"] = "Create Account";
}
<div class="center-screen">
    <div class="surface">
        <div class="form-group">
            <form method="post" asp-controller="Account" asp-action="SignUp" class="reg-form space-y-1" novalidate>
                <div class="form-heading">
                    <h1>Create Account</h1>
                </div>
                <div class="input-group">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input class="form-input" asp-for="FullName"  id="fullName">
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="input-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input class="form-input" asp-for="Email" id="email" >
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input class="form-input" asp-for="Password" id="password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input class="form-input" asp-for="ConfirmPassword" id="confirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="input-group">
                    <div class="custom-check">
                        <input asp-for="Terms" class="form-check-box" id="terms">
                        <label asp-for="Terms">I accept the <a href="#" class="h-links">Terms and Conditions</a></label>
                    </div>
                </div>
                <button type="submit" class="_btn-custom _btn-blue">Create Account</button>
            </form>
        </div>
        <footer class="form-footer">
            <div class="flex-end">
                <p>Already have an account? <a asp-controller="Account" asp-action="LogIn" class="h-links">Login</a></p>
            </div>
        </footer>
    </div>
</div>